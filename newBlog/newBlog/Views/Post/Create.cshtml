@model newBlog.Models.Post

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <fieldset>
        <legend>Post</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AuthorID, "Author")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AuthorID", String.Empty)
            @Html.ValidationMessageFor(model => model.AuthorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PostTitle)
            @Html.ValidationMessageFor(model => model.PostTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostAuthor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PostAuthor)
            @Html.ValidationMessageFor(model => model.PostAuthor)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostedOn)
        </div>
        <div class="editor-field">
            @Html.TextBox("PostedOn", DateTime.Now, new {disabled="disabled"})
            @Html.Hidden("PostedOn", DateTime.Now)
            @Html.ValidationMessageFor(model => model.PostedOn)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostText)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.PostText, 15, 100, new object { })
            @Html.ValidationMessageFor(model => model.PostText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostPicture)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PostPicture)
            @Html.ValidationMessageFor(model => model.PostPicture)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostTags)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PostTags)
            @Html.ValidationMessageFor(model => model.PostTags)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PostLikes)
        </div>
        <div class="editor-field">
            @Html.TextBox("PostLikes", 1, new {disabled="disabled"})
            @Html.Hidden("PostLikes", 1 )
            @Html.ValidationMessageFor(model => model.PostLikes)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
